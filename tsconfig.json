{
  "compilerOptions": {
    "skipLibCheck": true,
    "declaration": true,
    "downlevelIteration": true,
    "target": "ES2020",
    "module": "ESNext",
    "removeComments": false,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "jsx": "react",
    "composite": true,
    "rootDir": ".", // Root directory is the root of the monorepo
    "baseUrl": "." // Base directory for resolving non-relative module names
  },
  "include": [], // Not used in the root tsconfig, but required in individual packages
  "exclude": ["node_modules", "dist"], // Exclude unnecessary directories
  "references": [
    { "path": "packages/shared" }, // Reference the shared package
    { "path": "packages/tracking" }, // Reference the expenseCalculator package
    { "path": "packages/trackingPortal" }
  ]
}
